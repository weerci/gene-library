drop table MODERN.VERSIONS cascade constraints;

/*==============================================================*/
/* Table: VERSIONS                                              */
/*==============================================================*/
create table MODERN.VERSIONS  (
   ID                   NUMBER(10)                      not null,
   NAME                 NVARCHAR2(128)                  not null,
   D_CREATE             TIMESTAMP                       not null,
   constraint PK_VERSIONS primary key (ID)
);

comment on table MODERN.VERSIONS is
'Содержит записи о версии релизов базы данных';